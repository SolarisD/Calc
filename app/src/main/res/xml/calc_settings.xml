<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_dark_theme_key"
        android:summary="@string/pref_night_theme_summary"
        android:title="@string/pref_night_theme_title" />
    <PreferenceCategory android:title="Buttons">
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_haptic_buttons_key"
            android:summary="@string/pref_haptic_buttons_summary"
            android:title="@string/pref_haptic_buttons_title" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_sound_buttons_key"
            android:summary="@string/pref_sound_buttons_summary"
            android:title="@string/pref_sound_buttons_title" />
    </PreferenceCategory>
</PreferenceScreen>