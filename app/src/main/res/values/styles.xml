<resources >


    <!--Toolbar customization-->
    <style name="CalculatorToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/color_fore_a</item>
        <item name="android:background">@color/color_b</item>
    </style>

    <!--Menues customization-->
    <style name="CalculatorPopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:textColorPrimary">@color/color_fore_a</item>
        <item name="colorSurface">@color/color_b</item>
    </style>

    <style name="BaseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="SymbolButton" parent="BaseButton">
        <item name="android:textColor">@color/color_fore_a</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="ClearButton" parent="BaseButton">
        <item name="android:textColor">@color/color_fore_c</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="OperationButton" parent="BaseButton">
        <item name="android:textColor">@color/color_fore_b</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="MemoryButton" parent="BaseButton">
        <item name="android:textColor">@color/color_fore_d</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
