<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppThemeMain" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/color_b</item>
        <item name="colorPrimaryDark">@color/color_c</item>
        <item name="colorPrimaryVariant">@color/color_c</item>
        <item name="colorOnPrimary">@color/color_fore_a</item>
        <item name="colorSecondary">@color/color_fore_c</item>
        <item name="colorOnSecondary">@color/color_fore_b</item>
        <item name="toolbarStyle">@style/MyToolbarStyle</item>
        <item name="android:colorBackground">@color/color_b</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <!--Toolbar customization-->
    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="elevation">0dp</item>
    </style>


    <!--Buttons customization-->
    <style name="BaseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="SymbolButton" parent="BaseButton">
        <item name="android:textColor">@color/color_fore_a</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="ClearButton" parent="BaseButton">
        <item name="android:textColor">@color/color_fore_c</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="OperationButton" parent="BaseButton">
        <item name="android:textColor">@color/color_fore_b</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="MemoryButton" parent="BaseButton">
        <item name="android:textColor">@color/color_fore_d</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Display customization-->
    <style name="BaseTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
        <item name="android:paddingRight">@dimen/activity_margin</item>
        <item name="elevation">0dp</item>
        <item name="background">@color/color_b</item>
    </style>
</resources>
