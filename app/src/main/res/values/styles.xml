<resources >
    <style name="TextAppearance.PopupMenu.Calculator" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/onBackgroundColor</item>
    </style>

    <!--BUTTONS-->
    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">@dimen/buttons_inset</item>
        <item name="android:insetBottom">@dimen/buttons_inset</item>
        <item name="android:insetLeft">@dimen/buttons_inset</item>
        <item name="android:insetRight">@dimen/buttons_inset</item>
        <item name="cornerRadius">4dp</item>
    </style>
    <style name="Button.Memory" parent="Button">
        <item name="android:textSize">20sp</item>
        <item name="backgroundTint">@color/operationColor</item>
        <item name="android:textColor">@color/operationFrontColor</item>
    </style>
    <style name="Button.Operation">
        <item name="android:textSize">30sp</item>
        <item name="backgroundTint">@color/operationColor</item>
        <item name="iconTint">@color/operationFrontColor</item>
        <item name="android:textColor">@color/operationFrontColor</item>
    </style>
    <style name="Button.Symbol">
        <item name="android:textSize">30sp</item>
        <item name="backgroundTint">@color/symbolColor</item>
        <item name="android:textColor">@color/symbolFrontColor</item>
    </style>









</resources>
