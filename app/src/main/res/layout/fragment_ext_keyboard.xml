<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.dmitryluzev.calculator.core.Buttons"/>
        <variable
            name="vm"
            type="com.dmitryluzev.calculator.viewmodel.MainViewModel" />
        <variable
            name="appManager"
            type="com.dmitryluzev.calculator.app.AppManager" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.ExtKeyboardFragment"
        tools:ignore="HardcodedText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_m_clear"
                style="@style/SymbolButton"
                android:text="MC"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.M_CLEAR)}"/>

            <Button
                android:id="@+id/btn_m_plus"
                style="@style/SymbolButton"
                android:text="M+"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.M_PLUS)}"/>

            <Button
                android:id="@+id/btn_m_minus"
                style="@style/SymbolButton"
                android:text="M-"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.M_MINUS)}"/>

            <Button
                android:id="@+id/btn_m_restore"
                style="@style/SymbolButton"
                android:text="MR"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.M_RESTORE)}"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_sqr"
                style="@style/SymbolButton"
                android:text="X^2"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.SQR)}"/>

            <Button
                android:id="@+id/btn_clear"
                style="@style/SymbolButton"
                android:text="C"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.CLEAR)}"/>

            <Button
                android:id="@+id/btn_percent"
                style="@style/SymbolButton"
                android:text="%"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.PERCENT)}"/>


            <Button
                android:id="@+id/btn_negative"
                style="@style/SymbolButton"
                android:text="±"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.NEGATIVE)}"/>

            <Button
                android:id="@+id/btn_divide"
                style="@style/SymbolButton"
                android:text="÷"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.DIVIDE)}"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_sqrt"
                style="@style/SymbolButton"
                android:text="√"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.SQRT)}"/>

            <Button
                android:id="@+id/btn_7"
                style="@style/SymbolButton"
                android:text="7"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.SEVEN)}"/>

            <Button
                android:id="@+id/btn_8"
                style="@style/SymbolButton"
                android:text="8"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.EIGHT)}"/>

            <Button
                android:id="@+id/btn_9"
                style="@style/SymbolButton"
                android:text="9"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.NINE)}"/>

            <Button
                android:id="@+id/btn_multiply"
                style="@style/SymbolButton"
                android:text="×"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.MULTIPLY)}"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_sin"
                style="@style/SymbolButton"
                android:text="sin"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.SIN)}"/>

            <Button
                android:id="@+id/btn_4"
                style="@style/SymbolButton"
                android:text="4"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.FOUR)}"/>

            <Button
                android:id="@+id/btn_5"
                style="@style/SymbolButton"
                android:text="5"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.FIVE)}"/>

            <Button
                android:id="@+id/btn_6"
                style="@style/SymbolButton"
                android:text="6"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.SIX)}"/>

            <Button
                android:id="@+id/btn_minus"
                style="@style/SymbolButton"
                android:text="-"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.MINUS)}"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cos"
                style="@style/SymbolButton"
                android:text="cos"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.COS)}"/>

            <Button
                android:id="@+id/btn_1"
                style="@style/SymbolButton"
                android:text="1"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.ONE)}"/>

            <Button
                android:id="@+id/btn_2"
                style="@style/SymbolButton"
                android:text="2"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.TWO)}"/>

            <Button
                android:id="@+id/btn_3"
                style="@style/SymbolButton"
                android:text="3"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.THREE)}"/>

            <Button
                android:id="@+id/btn_plus"
                style="@style/SymbolButton"
                android:text="+"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.PLUS)}"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_tan"
                style="@style/SymbolButton"
                android:text="tan"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.TAN)}"/>

            <Button
                android:id="@+id/btn_0"
                style="@style/SymbolButton"
                android:text="0"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.ZERO)}"/>

            <Button
                android:id="@+id/btn_dot"
                style="@style/SymbolButton"
                android:text="@string/decimal_separator"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.DOT)}"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_backspace"
                style="@style/SymbolButton"
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.BACKSPACE)}"
                android:padding="0dp"
                app:icon="@android:drawable/ic_input_delete"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="32dp" />

            <Button
                android:id="@+id/btn_result"
                style="@style/SymbolButton"
                android:text="="
                android:hapticFeedbackEnabled="@{appManager.vibro}"
                android:onClick="@{() -> vm.buttonPressed(Buttons.RESULT)}"/>
        </LinearLayout>
    </LinearLayout>
</layout>