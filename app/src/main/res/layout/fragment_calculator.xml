<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText | NestedWeights"
    >

    <data>
        <import type="android.view.View" />
        <import type="com.dmitryluzev.core.Symbols"/>
        <import type="com.dmitryluzev.core.operations.OperationFactory"/>
        <variable
            name="vm"
            type="com.dmitryluzev.calculator.view.calculator.CalculatorViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2dp"
        tools:context=".view.calculator.CalculatorFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="2">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_history"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_alu" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_alu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:text="@{vm.aluDisplay}"
                android:textColor="@color/operationFrontColor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="@{vm.aluDisplay != null ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toTopOf="@+id/tv_buffer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_buffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:maxLines="1"
                android:padding="4dp"
                android:text="@{vm.bufferDisplay}"
                android:textColor="@color/symbolFrontColor"
                android:textSize="46sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_memory" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_memory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:padding="4dp"
                android:text="@{vm.memoryDisplay}"
                android:textColor="@color/operationFrontColor"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.05"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_m_clear"
                    style="@style/Button.Memory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.memoryClear()}"
                    android:text="MC" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_m_add"
                    style="@style/Button.Memory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.memoryAdd()}"
                    android:text="M+" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_m_subtract"
                    style="@style/Button.Memory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.memorySubtract()}"
                    android:text="M-" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_m_restore"
                    style="@style/Button.Memory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.memoryRestore()}"
                    android:text="MR" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_clear"
                    style="@style/Button.Operation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.clearCalc()}"
                    android:text="C" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_backspace"
                    style="@style/Button.Operation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.backspace()}"
                    android:onLongClick="@{() -> vm.clearBuffer()}"
                    app:icon="@drawable/ic_baseline_backspace_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="24dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_percent"
                    style="@style/Button.Operation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.percent()}"
                    android:text="%" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_divide"
                    style="@style/Button.Operation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{() -> vm.operation(OperationFactory.DIVIDE_ID)}"
                    android:text="รท" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_7"
                    style="@style/Button.Symbol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.symbol(Symbols.SEVEN)}"
                    android:text="7" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_8"
                    style="@style/Button.Symbol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.symbol(Symbols.EIGHT)}"
                    android:text="8" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_9"
                    style="@style/Button.Symbol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.symbol(Symbols.NINE)}"
                    android:text="9" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_multiply"
                    style="@style/Button.Operation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{() -> vm.operation(OperationFactory.MULTIPLY_ID)}"
                    android:text="ร" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_4"
                    style="@style/Button.Symbol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.symbol(Symbols.FOUR)}"
                    android:text="4"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_5"
                    style="@style/Button.Symbol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.symbol(Symbols.FIVE)}"
                    android:text="5" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_6"
                    style="@style/Button.Symbol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.symbol(Symbols.SIX)}"
                    android:text="6" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_subtract"
                    style="@style/Button.Operation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{() -> vm.operation(OperationFactory.SUBTRACT_ID)}"
                    android:text="-" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_1"
                    style="@style/Button.Symbol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.symbol(Symbols.ONE)}"
                    android:text="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_2"
                    style="@style/Button.Symbol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.symbol(Symbols.TWO)}"
                    android:text="2" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_3"
                    style="@style/Button.Symbol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.symbol(Symbols.THREE)}"
                    android:text="3" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add"
                    style="@style/Button.Operation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{() -> vm.operation(OperationFactory.ADD_ID)}"
                    android:text="+" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_0"
                    style="@style/Button.Symbol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.symbol(Symbols.ZERO)}"
                    android:text="0" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_dot"
                    style="@style/Button.Symbol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.symbol(Symbols.DOT)}"
                    android:text="@string/decimal_separator" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_negative"
                    style="@style/Button.Symbol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.negative()}"
                    android:text="ยฑ" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_result"
                    style="@style/Button.Operation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="@{vm.haptic}"
                    android:onClick="@{() -> vm.result()}"
                    android:text="=" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>