<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">
    <!--tools:context=".view.MainActivity"-->

    <TextView
        android:id="@+id/tv_memory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.05"
        android:gravity="center|start"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:textSize="@dimen/expression_text_size" />

    <TextView
        android:id="@+id/tv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.92"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical|end"
        android:maxLines="1"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:text="0"
        android:textSize="@dimen/result_text_size" />

    <TextView
        android:id="@+id/tv_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.05"
        android:gravity="end|bottom"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:textSize="@dimen/expression_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_m_clear"
            style="@style/MemoryButton"
            android:text="MC" />

        <Button
            android:id="@+id/btn_m_plus"
            style="@style/MemoryButton"
            android:text="M+" />

        <Button
            android:id="@+id/btn_m_minus"
            style="@style/MemoryButton"
            android:text="M-" />

        <Button
            android:id="@+id/btn_m_restore"
            style="@style/MemoryButton"
            android:text="MR" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_sqr"
            style="@style/MemoryButton"
            android:text="X^2" />

        <Button
            android:id="@+id/btn_clear"
            style="@style/Button"
            android:text="C" />

        <Button
            android:id="@+id/btn_percent"
            style="@style/Button"
            android:text="%" />



        <Button
            android:id="@+id/btn_negative"
            style="@style/Button"
            android:text="+/-" />

        <Button
            android:id="@+id/btn_divide"
            style="@style/Button"
            android:text="÷" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_sqrt"
            style="@style/MemoryButton"
            android:text="√" />

        <Button
            android:id="@+id/btn_7"
            style="@style/Button"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/Button"
            android:text="8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/Button"
            android:text="9" />

        <Button
            android:id="@+id/btn_multiply"
            style="@style/Button"
            android:text="×" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_sin"
            style="@style/MemoryButton"
            android:text="sin" />

        <Button
            android:id="@+id/btn_4"
            style="@style/Button"
            android:text="4" />

        <Button
            android:id="@+id/btn_5"
            style="@style/Button"
            android:text="5" />

        <Button
            android:id="@+id/btn_6"
            style="@style/Button"
            android:text="6" />

        <Button
            android:id="@+id/btn_minus"
            style="@style/Button"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cos"
            style="@style/MemoryButton"
            android:text="cos" />

        <Button
            android:id="@+id/btn_1"
            style="@style/Button"
            android:text="1" />

        <Button
            android:id="@+id/btn_2"
            style="@style/Button"
            android:text="2" />

        <Button
            android:id="@+id/btn_3"
            style="@style/Button"
            android:text="3" />

        <Button
            android:id="@+id/btn_plus"
            style="@style/Button"
            android:text="+" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_tan"
            style="@style/MemoryButton"
            android:text="tan" />

        <Button
            android:id="@+id/btn_0"
            style="@style/Button"
            android:text="0" />

        <Button
            android:id="@+id/btn_dot"
            style="@style/Button"
            android:text="." />


        <Button
            android:id="@+id/btn_backspace"
            style="@style/Button"
            android:text="⇐" />

        <Button
            android:id="@+id/btn_result"
            style="@style/Button"
            android:text="=" />
    </LinearLayout>
</LinearLayout>