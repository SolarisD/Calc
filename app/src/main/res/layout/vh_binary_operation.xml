<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <import type="com.dmitryluzev.core.operations.Operation"/>
        <variable
            name="operation"
            type="com.dmitryluzev.core.operations.BinaryOperation" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/tvA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="2dp"
            android:textSize="20sp"
            android:text="@{operation.a.toString()}"
            android:textColor="@color/onBackgroundColor"
            android:maxLines="1" />
        <TextView
            android:id="@+id/tvOp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="2dp"
            android:text="@{operation.id}"
            android:textSize="20sp"
            android:textColor="@color/onBackgroundColor"
            android:maxLines="1" />
        <TextView
            android:id="@+id/tvB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="2dp"
            android:textSize="20sp"
            android:visibility="@{operation.b != null ? View.VISIBLE : View.GONE}"
            android:text="@{operation.b.toString() + (operation.percentage ? &quot;%&quot; : &quot;&quot;)}"
            android:textColor="@color/onBackgroundColor"
            android:maxLines="1" />
        <TextView
            android:id="@+id/tvEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="2dp"
            android:visibility="@{((Operation)operation).result != null ? View.VISIBLE : View.GONE}"
            android:text="="
            android:textSize="20sp"
            android:textColor="@color/onBackgroundColor"
            android:maxLines="1" />
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="2dp"
            android:textSize="20sp"
            android:visibility="@{((Operation)operation).result != null ? View.VISIBLE : View.GONE}"
            android:text="@{((Operation)operation).result.toString}"
            android:textColor="@color/onBackgroundColor"
            android:maxLines="1" />
    </LinearLayout>
</layout>