<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <import type="com.dmitryluzev.core.Operation"/>
        <variable
            name="operation"
            type="com.dmitryluzev.core.BinaryOperation" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/tvA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="2dp"
            android:textSize="20sp"
            android:textColor="@color/onBackgroundColor"
            android:maxLines="1"
            app:fromDouble="@{operation.a}"/>
        <TextView
            android:id="@+id/tvOp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="2dp"
            android:text="@{((Operation)operation).tag}"
            android:textSize="20sp"
            android:textColor="@color/onBackgroundColor"
            android:maxLines="1" />
        <TextView
            android:id="@+id/tvB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="2dp"
            android:textSize="20sp"
            android:visibility="@{operation.b != null ? View.VISIBLE : View.GONE}"
            android:textColor="@color/onBackgroundColor"
            android:maxLines="1"
            app:fromDouble="@{operation.b}"/>
        <TextView
            android:id="@+id/tvEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="2dp"
            android:visibility="@{((Operation)operation).result != null ? View.VISIBLE : View.GONE}"
            android:text="="
            android:textSize="20sp"
            android:textColor="@color/onBackgroundColor"
            android:maxLines="1" />
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="2dp"
            android:textSize="20sp"
            android:visibility="@{((Operation)operation).result != null ? View.VISIBLE : View.GONE}"
            android:textColor="@color/onBackgroundColor"
            android:maxLines="1"
            app:fromDouble="@{((Operation)operation).result}"/>
    </LinearLayout>
</layout>