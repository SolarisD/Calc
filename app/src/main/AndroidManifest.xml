<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dmitryluzev.calculator">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.dmitryluzev.calculator.app.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_calculator"
        android:label="@string/app_label"
        android:roundIcon="@drawable/ic_calculator_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeMain">

        <activity android:name="com.dmitryluzev.calculator.view.HistoryActivity"
            android:label="@string/history_activity_label"
            android:parentActivityName="com.dmitryluzev.calculator.view.MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.dmitryluzev.calculator.view.AboutActivity"
            android:label="@string/about_activity_label"
            android:parentActivityName="com.dmitryluzev.calculator.view.MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.dmitryluzev.calculator.view.SettingsActivity"
            android:label="@string/settings_activity_label"
            android:parentActivityName="com.dmitryluzev.calculator.view.MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.dmitryluzev.calculator.view.MainActivity"
            android:label="@string/main_activity_label"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>